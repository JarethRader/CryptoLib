{
  "name": "cryptolib",
  "version": "0.1.1",
  "description": "Backend for CryptoLib",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Jareth Rader",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "ethereumjs-tx": "^2.1.1",
    "express": "^4.17.3",
    "heroku-ssl-redirect": "0.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.11",
    "node-schedule": "^1.3.2",
    "sequelize": "^5.21.2",
    "web3": "^1.2.0"
  },
  "devDependencies": {
    "http": "0.0.0",
    "nodemon": "^1.19.2",
    "serve-handler": "^6.1.2"
  }
}
